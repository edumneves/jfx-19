<?php $_description = $this->getProduct()->getDescription(); ?>
<?php if ($_description): ?>
    <h2><?php echo $this->__('Details') ?></h2>
    <div class="std">
        <?php echo $this->helper('catalog/output')->productAttribute($this->getProduct(), $_description, 'description') ?>
    </div>

    <div class="std">
        <?php

        $_product = $this->getProduct();
        $fornecedor = $_product->getResource()->getAttribute('manufacturer')->getFrontend()->getValue($_product);
        $modelo = $_product->getResource()->getAttribute('modelo')->getFrontend()->getValue($_product);
        $bloco = $fornecedor . "_" . $modelo;
        $bloco = str_replace(" ", "_", $bloco);

//        echo $this->getLayout()->createBlock('cms/block')->setBlockID($cmsstatic)->tohtml();
        echo "<!--Modelo = " . $modelo . "<br> Fornecedor = " . $fornecedor;
        echo "<br>Nome do bloco estatico = " . $bloco . "<br>-->";
        echo "<br>" . $this->getLayout()->createBlock('cms/block')->setBlockID($bloco)->tohtml();

        ?>

    </div>


<?php endif; ?>

